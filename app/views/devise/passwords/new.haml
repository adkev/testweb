- content_for(:title) do
    = render 'shared/edge/title'

- content_for(:content) do
    .content
        .fg.vc.hc
            .fr.f1.vc.hc
                .card
                    %h2.text-bold.text-dark-blue Forgot your password?
                    %br
                    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
                        = devise_error_messages!

                        .fc
                            .text-field.text-left
                                = f.label :email, 'Email Address', class: 'text-semi-bold'
                                = f.email_field :email, autofocus: true, placeholder: 'Email address'

                        .fc.actions
                            = button_tag 'Send Instructions', type: 'submit', class: 'btn btn-blue btn-border-in'

                    = render 'devise/shared/links'
